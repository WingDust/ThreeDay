{
  "manifest_version":2,
  "name":"a",
  "version":"1.0",
  "description":"竹简",
  "icons":{
    "16":"img/icon.png",
    "32":"img/icon.png",
    "128":"img/icon.png"
  },
  "permissions":[
    "tabs",
    {"fileSystem":["write","directory"]},
    "nativeMessaging"
  ],
  "minimum_chrome_version":"23",
  "background":{
    "scripts":["background.js"],
    "persistent":false
  },
  "browser_action":{
    "default_icon":"img/icon.png",
    "default_titile":"chrome",
    "default_popup":"popup.html"
  }
}
